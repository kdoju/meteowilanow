from bokeh.plotting import figure
from bokeh.embed import components
from bokeh.models import DatetimeTickFormatter
from bokeh.models import Range1d, Label, BoxAnnotation
import sun_info

def plot_comp(
#general
    title = '',
    plot_width = '',
    plot_height = '',
    x_axis_type = '',
    x_axis_format = '',
    xmin = '',
    xmax = '',
    tools = ['pan','xwheel_zoom','box_zoom','ywheel_zoom','reset'],
#plot1
    type_1 = '',
    d1_index = '',
    d1_data = '',
    color_1 = '',
    line_1_width = '',
    line_1_type = '',
#plot2
    type_2 = '',
    d2_index = '',
    d2_data = '',
    color_2 = '',
    line_2_width = '',
    line_2_type = ''
    ):
	
    "Function info"
    
    #get sunrise and sunset time
    #sunrise, sunset = sun_info.get_sun_info()

    plot = figure(title=title, plot_width = plot_width, plot_height = plot_height, x_axis_type = x_axis_type, tools = tools)
    plot.line(d1_index, d1_data, line_width = line_1_width, color = color_1, line_dash = line_1_type)
    plot.line(d2_index, d2_data, line_width = line_2_width, color = color_2, line_dash = line_2_type)
    plot.toolbar.logo = None
    plot.toolbar_location = "above"
    plot.x_range = Range1d(xmin, xmax)
    plot.xaxis[0].formatter = x_axis_format
    #left_box = BoxAnnotation(right=sunrise, fill_alpha=0.1, fill_color='blue')
    #mid_box = BoxAnnotation(left=sunrise, right=sunset, fill_alpha=0.1, fill_color='green')
    #right_box = BoxAnnotation(left=sunset, fill_alpha=0.1, fill_color='blue')
    #plot.add_layout(left_box)
    #plot.add_layout(mid_box)
    #plot.add_layout(right_box)

    plot_script, plot_div = components(plot)
    
    return plot_script, plot_div
	
